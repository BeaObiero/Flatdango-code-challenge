body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

#films {
    list-style: none;
    padding: 0;
    margin: 0;
}

.film {
    background-color: #fff;
    padding: 10px;
    border: 1px solid #ddd;
    margin-bottom: 10px;
    cursor: pointer;
}

.item {
    margin-bottom: 10px;
}

#poster {
    max-width: 100%;
    height: auto;
}
